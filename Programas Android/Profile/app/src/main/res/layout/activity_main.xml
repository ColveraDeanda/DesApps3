<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.utng.colvera.profile.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:src="@drawable/fondoazul"/>

    <ImageView
        android:layout_width="@dimen/width_image"
        android:layout_height="@dimen/height_image"
        android:layout_marginTop="@dimen/margin_top_image"
        android:layout_marginLeft="@dimen/margin_left_image"
        android:src="@drawable/steve"
        android:id="@+id/image"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_below="@+id/image"
            android:layout_marginLeft="@dimen/margin_left_button"
            android:layout_marginRight="@dimen/margin_right_button"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:background="@drawable/borders"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="@dimen/text_top"
        android:text="CristÃ³bal Olvera Deanda"
        android:layout_marginLeft="@dimen/text_left"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:id="@+id/name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="@dimen/text_top2"
        android:text="crisbmx2008@gmail.com"
        android:layout_marginLeft="@dimen/text_left"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:id="@+id/email"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="@dimen/text_top2"
        android:text="@string/ganzo123"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="@dimen/drawable_padding"
        android:layout_marginLeft="@dimen/text_left"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:id="@+id/pass"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_marginTop="@dimen/text_top2"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/text_left"
        android:hint="@string/confirm_password"
        android:textSize="@dimen/tezt_size_pass"
        android:textColor="@color/black"
        android:id="@+id/confirm"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="@dimen/drawable_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm"
        android:layout_marginTop="@dimen/text_top2"
        android:text="@string/edit_information"
        android:drawableLeft="@drawable/plus"
        android:drawablePadding="@dimen/drawable_padding"
        android:layout_marginLeft="@dimen/text_left"
        android:textSize="@dimen/text_size_edit"
        android:textColor="@color/black"
        android:id="@+id/add"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/confirm"
        android:layout_marginLeft="@dimen/margin_left_button"
        android:layout_marginRight="@dimen/margin_right_button"
        android:layout_marginTop="@dimen/top_update"
        android:text="@string/update"
        android:textColor="@color/white"
        android:background="@drawable/borders"
        />

</RelativeLayout>
