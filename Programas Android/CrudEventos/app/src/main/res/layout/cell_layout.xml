<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/imv_photo"
        android:layout_width="@dimen/width_image"
        android:layout_height="@dimen/height_image"
        android:src="@mipmap/ic_launcher_round"
        android:layout_margin="@dimen/margin_image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_linear"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_name"
            android:layout_width="@dimen/width_text"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginbotton_text"
            android:text="@string/name"
            android:textSize="@dimen/text_size_name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actulizar" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/width_button"
            android:layout_height="wrap_content"
            android:text="@string/borrar" />
    </LinearLayout>

</LinearLayout>